<Window x:Class="CybersecurityAssistantApp.CyberQuiz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Quiz" Height="500" Width="700">
    <Grid Margin="20">
        <StackPanel>
            <!-- Implementing the Cybersecurity Mini-Game (Quiz) - GUI -->
            <TextBlock x:Name="txtQuestion" FontSize="18" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,10"/>

            <StackPanel x:Name="spAnswers" Margin="0,0,0,10"/>

            <TextBlock x:Name="txtFeedback" FontSize="14" Foreground="DarkGreen" TextWrapping="Wrap" Margin="0,10,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="btnSubmit" Content="Submit Answer" Width="120" Margin="10" Click="SubmitAnswer_Click"/>
                <Button x:Name="btnNext" Content="Next Question" Width="120" Margin="10" Click="NextQuestion_Click" Visibility="Collapsed"/>
                <Button x:Name="btnRestart" Content="Restart Quiz" Width="120" Margin="10" Click="RestartQuiz_Click" Visibility="Collapsed"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
